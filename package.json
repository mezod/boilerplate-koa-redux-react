{
  "name": "boilerplate-koa-redux-react",
  "version": "1.0.0",
  "description": "A boilerplate for a Koa Redux React application with Webpack, Mocha and SASS",
  "main": "index.js",
  "scripts": {
    "webserver": "node api/src/server.js",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js 'test/**/*.@(js|jsx)'",
    "test:watch": "npm run test -- --watch",
    "build": "node_modules/.bin/webpack",
    "dev": "node_modules/.bin/webpack-dev-server",
    "lint": "eslint . --ext .js --ext .jsx",
    "deploy": "NODE_ENV=production webpack -p",
    "clean": "rm -rf app/dist app/build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mezod/boilerplate-koa-redux-react.git"
  },
  "keywords": [
    "boilerplate",
    "koa",
    "redux",
    "react",
    "webpack",
    "mocha",
    "sass"
  ],
  "author": "Joan Boixad√≥s",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mezod/boilerplate-koa-redux-react/issues"
  },
  "homepage": "https://github.com/mezod/boilerplate-koa-redux-react#readme",
  "dependencies": {
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "bookshelf": "^0.8.2",
    "css-loader": "^0.19.0",
    "html-webpack-plugin": "^1.6.1",
    "immutable": "^3.7.5",
    "isomorphic-fetch": "^2.1.1",
    "knex": "^0.8.6",
    "koa": "^1.0.0",
    "koa-cors": "0.0.16",
    "koa-route": "^2.4.2",
    "mysql": "^2.9.0",
    "node-sass": "^3.3.3",
    "react": "^0.13.3",
    "react-redux": "^3.0.1",
    "react-router": "^0.13.3",
    "redux": "^3.0.0",
    "redux-thunk": "^1.0.0",
    "sass-loader": "^2.0.1",
    "style-loader": "^0.12.4",
    "webpack": "^1.12.2"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "chai": "^3.3.0",
    "chai-immutable": "^1.3.0",
    "eslint": "^1.5.1",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.4.2",
    "jsdom": "^6.5.1",
    "mocha": "^2.3.3",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^2.1.3",
    "webpack-dev-server": "^1.11.0"
  }
}

